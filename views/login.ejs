<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yönetici Girişi - GDZ Elektrik</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>

    <div class="login-card">
        <div class="logo-area">
            <img src="/gdz.png" alt="GDZ Logo" onerror="this.style.display='none'">
        </div>
        
        <h2>Yönetici Girişi</h2>

        <% if (typeof error !== 'undefined') { %>
            <div style="color: red; margin-bottom: 15px; font-size: 14px; font-weight: bold;">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
            </div>
        <% } %>

        <form action="/login" method="POST">
            <div class="form-group">
                <label>Kullanıcı Adı</label>
                <div class="input-wrapper">
                    <i class="fas fa-user"></i>
                    <input type="text" name="username" placeholder="Kullanıcı adınızı girin" required>
                </div>
            </div>
            
            <div class="form-group">
                <label>Şifre</label>
                <div class="input-wrapper">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="password" placeholder="Şifrenizi girin" required>
                </div>
            </div>
            
            <button type="submit">Giriş Yap <i class="fas fa-arrow-right"></i></button>
        </form>
    </div>

</body>
</html>